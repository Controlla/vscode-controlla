{
	"name": "vscode-controlla",
	"displayName": "Controlla",
	"description": "VsCode plugin for Controlla Developers",
	"version": "0.0.1",
	"publisher": "Controlla",
	"author": {
		"name": "Ivan Sotelo"
	},
	"homepage": "https://controlla.com.mx/",
	"bugs": {
		"url": "https://github.com/controlla/vscode-controlla/issues",
		"email": "support@controlla.com.mx"
	},
	"engines": {
    "vscode": "^1.71.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:controlla.helloWorld",
		"workspaceContains:**/controlla.config"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/controlla/vscode-controlla.git"
	},
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "controlla.helloWorld",
				"title": "Hello World"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "controlla.new-feature",
					"group": "blocGroup@1",
					"when": "explorerResourceIsFolder"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
		"mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
	}
}
